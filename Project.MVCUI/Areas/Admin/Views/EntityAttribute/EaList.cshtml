@model List<EntityAttribute>
@{
    ViewBag.Title = "EaList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Özellik eklemek icin @Html.ActionLink("Tıklayınız", "AddEA")</h3>
<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>Ozellik İsmi</th>
                    <th>Ozellik Acıklaması</th>
                    <th class="hidden-phone">Durum</th>
                    <th class="hidden-phone">Sil</th>
                    <th class="hidden-phone">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (EntityAttribute item in Model)
                {
                    <tr class="gradeX">
                        <td>@item.AttributeName</td>
                        <td>
                            @item.Description
                        </td>
                        <td class="hidden-phone">@item.Status</td>
                        <td class="center hidden-phone">
                            @Html.ActionLink("Sil", "DeleteEA", new { id = item.ID }, new { @class = "btn btn-danger" })
                    </td>
                    <td class="center hidden-phone">@Html.ActionLink("Güncelle", "UpdateEA", new { id = item.ID }, new { @class = "btn btn-warning" })</td>
                </tr>
            }


            </tbody>
        </table>
    </div>
</div>


