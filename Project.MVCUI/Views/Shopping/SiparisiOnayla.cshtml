@model OrderVM
@{
    ViewBag.Title = "SiparisiOnayla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SiparisiOnayla</h2>

<div class="form">
    @using (Html.BeginForm("SiparisiOnayla", "Shopping", FormMethod.Post, new { @class = "form-horizontal tasi-form" }))
    {
        <div class="form-group">
            <label class="col-sm-2 control-label">Gönderim Adresi</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Order.ShippedAddress, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kart Numarası</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentVM.CardNumber, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kart Güvenlik Numarası</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentVM.SecurityNumber, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kullanım Tarihi Son Ay</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentVM.CardExpiryMonth, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kullanım Tarihi Son Yıl</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentVM.CardExpiryYear, new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <label class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Order.Email, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kart Üzerindeki İsim</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentVM.CardUserName, new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <label class="col-sm-2 control-label">Onayla</label>
            <div class="col-sm-10">
               <button class="btn btn-primary">
                   Onay

               </button>
            </div>
        </div>
    }
</div>