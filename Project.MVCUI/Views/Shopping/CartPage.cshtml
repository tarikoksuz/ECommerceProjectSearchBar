@model Cart
@{
    ViewBag.Title = "CartPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    Odemeniz gereken topplam tutar => @Model.TotalPrice ... Siparişi onaylamak icin lutfen @Html.ActionLink("Tıklayınız","SiparisiOnayla")
</div>



<div class="row product-list">

    @foreach (CartItem item in Model.Sepetim)
    {
        <div class="col-md-4">
            <section class="panel">
                <div class="pro-img-box">
                    @if (item.ImagePath == null)
                    {

                        <img src="~/Pictures/add3bfd1-46b3-47f0-84b6-febd5998cd11.jpg" width="100" height="300" alt="Resim Yok" title="@item.Name" />
                    }
                    else
                    {
                        <img src="@item.ImagePath" width="100" height="300" alt="Resim Yok" title="@item.Name" />
                    }

                    <a href="@Url.Action("DeleteFromCart",new { id=item.ID})" class="adtocart">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </div>
                <div class="panel-body text-center">
                    <h4>
                        <a href="#" class="pro-title">
                           @item.Name x @item.Amount
                        </a>
                    </h4>
                    <p class="price">$@item.SubTotal</p>
                </div>
            </section>
        </div>
    }



</div>

