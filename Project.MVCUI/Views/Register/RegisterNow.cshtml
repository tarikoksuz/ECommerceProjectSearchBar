<!DOCTYPE html>
@model AppUserVM
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.png">
    <title>FlatLab - Flat & Responsive Bootstrap Admin Template</title>
    <!-- Bootstrap core CSS -->
    <link href="~/OuterTools/FlatAdmin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/OuterTools/FlatAdmin/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/OuterTools/FlatAdmin/assets//font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/FlatAdmin/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/FlatAdmin/css/style-responsive.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="~/OuterTools/FlatAdmin/js//html5shiv.js"></script>
    <script src="~/OuterTools/FlatAdmin/js//respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-body">
    <div class="container">
        @using (Html.BeginForm("RegisterNow", "Register", FormMethod.Post, new { @class = "form-signin" }))
        {
            if (ViewBag.ZatenVar != null)
            {
                <h2>  @ViewBag.ZatenVar</h2>
            }
            
            <h2 class="form-signin-heading">Register now!</h2>
            <div class="login-wrap">
                @Html.TextBoxFor(x => x.AppUser.UserName, new { @class = "form-control", placeholder = "Kullanıcı İsmi giriniz" })

                @Html.PasswordFor(x => x.AppUser.Password, new { @class = "form-control", placeholder = "Sifre giriniz" })

                @Html.TextBoxFor(x => x.AppUser.Email, new { @class = "form-control", placeholder = "Email giriniz" })

                @Html.TextBoxFor(x => x.AppUserDetail.FirstName, new { @class = "form-control", placeholder = "İsminizi giriniz" })

                @Html.TextBoxFor(x => x.AppUserDetail.LastName, new { @class = "form-control", placeholder = "Soyisminizi giriniz" })

                Adres giriniz: <br />

                @Html.TextAreaFor(x => x.AppUserDetail.Address, new { @class = "form-control", @style = "resize:none;" })

                <br />

                <button class="btn btn-lg btn-login btn-block" type="submit">Sign in</button>


                <div class="registration">
                    
                    @Html.ActionLink("Giriş yap","Login","Home")
                    <a class="" href="registration.html">
                        Log in
                    </a>
                </div>
            </div>
            <!-- Modal -->
            <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Forgot Password ?</h4>
                        </div>
                        <div class="modal-body">
                            <p>Enter your e-mail address below to reset your password.</p>
                            <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">
                        </div>
                        <div class="modal-footer">
                            <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
                            <button class="btn btn-success" type="button">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- modal -->
        }


    </div>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/OuterTools/FlatAdmin/js//jquery.js"></script>
    <script src="~/OuterTools/FlatAdmin/js//bootstrap.min.js"></script>

</body>
</html>
